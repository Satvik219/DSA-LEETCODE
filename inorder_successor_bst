/*Complete the function below
Node is as follows:
class Node{
    int data;
    Node left,right;
    Node(int d){
        data=d;
        left=right=null;
    }
}
*/
class Solution {
    // returns the inorder successor of the Node x in BST (rooted at 'root')
    public int inorderSuccessor(Node root, Node x) {
        int successor=-1;
        while(root!=null){
            if(root.data>x.data){
                successor=root.data;
                root=root.left;
            }
            else{
                //root.val <= x.val we move right for value bigger than x.val
                root=root.right;
            }
        }
        return successor;
    }
}
